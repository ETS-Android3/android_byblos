<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4A916B"
        android:backgroundTint="#50835F"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/employeeBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Complete Profile Information"
            android:textColor="#E1DFDF"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/addressBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address information: "
            android:textColor="#E1DFDF"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/numAddressEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Number: "
            android:textColor="#E1DFDF"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/streetAddressEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Street name: "
            android:textColor="#E1DFDF"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/phoneBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone information: "
            android:textColor="#E1DFDF"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/phoneEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Phone Number: "
            android:textColor="#E1DFDF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/completeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#689F82"
            android:text="Submit"/>

    </LinearLayout>


</RelativeLayout>