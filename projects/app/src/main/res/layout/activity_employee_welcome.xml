<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5779585"
    android:backgroundTint="@color/white"
    tools:context=".EmployeeWelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="#84B58F"
            android:backgroundTint="#84B58F"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingVertical="20dp"
            android:text="WELCOME"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/roleTextView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#B5D1BB"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Role: "
            android:textColor="@color/white"
            android:textStyle="italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:backgroundTint="#6078CD9E" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#669871"
            android:text="Profile Information" />

        <Button
            android:id="@+id/empLogoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#AECAB4"
            android:text="@string/logout_button" />

    </LinearLayout>

</RelativeLayout>